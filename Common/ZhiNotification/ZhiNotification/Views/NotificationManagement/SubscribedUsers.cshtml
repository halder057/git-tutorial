@model List<ZhiNotificationCommon.DataAccess.Models.User>
<div class="modal-dialog">
    <div class="modal-content">
        <input type="hidden" name="change-id" value="" />
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Subscribed users for this category</h4>
        </div>
        <div class="modal-body">
            <table class="table table-bordered">
                <thead class="well-material-brown-500">
                    <tr>
                        <th class="checkbox-col">
                            <div class="checkbox checkbox-material-brown-50 text-center">
                                <label>
                                    <input type="checkbox"
                                           id="select-all-subscriber" checked/>
                                </label>
                            </div>
                        </th>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="checkbox-col">
                                <div class="checkbox checkbox-material-brown-500 text-center">
                                    <label>
                                        <input type="checkbox"
                                               data-elementid="exclude-list-checkbox"
                                               data-userid="@item.UserID"
                                               checked />
                                    </label>
                                </div>
                            </td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.EmailAddress</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="container">
                    <button id="update-excluded-list-btn" class="btn btn-material-brown-500 pull-right">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>
